<%- include('../includes/head.ejs') %>

<%- include('../includes/navigation.ejs') %>
<body>

  <main>
    <% if (products.length > 0) { %> 
    
      <div class="container" style="margin-top:30px;">
        <div class="col align-self-center">
          <h1> Your Cart</h1>
        <ul class="list-group">
          <%  products.forEach(p=>{ %> 
            <a href="/products/<%= p.productData.id  %> " style="text-decoration: none;color: #52057b;" >
        
            <li class="list-group-item" aria-current="true">
          
              <div style="display:flex;
                           flex-direction: row ;
                           justify-content: space-between;
                           align-items: center;
                ">
                <img src="<%= p.productData.image_url %>" class="img-thumbnail" style="width:50px;height:50px;object-fit: cover;" alt="">
                <h6> Title: <%= p.productData.title %> </h6>
                <h6> Quantity: <%= p.qty %> </h6>
                <h6> Price: $<%= p.productData.price %> </h6>
              
              </div>
            </li>
            </a>
          <% }) %> 
          <li class="list-group-item" aria-current="true">
            <h4>Total Amount: $<%= totalPrice%></h4>
          </li>
        </ul>
        </div>
      </div>
     
  
      <% } else { %> 
          <h1>No Products in the Cart</h1>
        <% } %> 
   
</main>

<%- include('../includes/end.ejs') %>
</body>

</html>
