<%- include('../includes/head.ejs') %>

<%- include('../includes/navigation.ejs') %>
<body>

  <main>
    <% if (products.length > 0) { %>

      <div class="container" style="margin-top:30px;">
        <div class="col align-self-center">
          <h1> Your Cart</h1>
          <table class="table table-hover table-borderless">
          <%  products.forEach(p=>{ %>

              <tr>

                <td class="table-primary align-self-center">
            <a href="/products/<%= p.product_id._id %> " style="text-decoration: none;color: #52057b;" >

                  <img src="<%= p.product_id.image_url %>" class="img-thumbnail" style="width:50px;height:50px;object-fit: cover;" alt="">
</a>
                </td>
                <td class="table-secondary">
                  <h6> Title: <%= p.product_id.title %> </h6>

                </td>
                <td class="table-success">
                  <h6> Quantity: <%= p.quantity %> </h6>
                  <a class="btn" style="
                  color: #ffffff;
                  background-color: #52057b;
                  box-shadow: none;width:50px;
                  " href="/cart-delete-item/<%= p.product_id._id %>">
                  <img src="data:image/png;base64,"/>

                  </a>
                </td>
                <td class="table-danger">
                  <h6> Price: $<%= p.product_id.price %> </h6>

                </td>


        </tr>






          <% }) %>
        </table>
          <li class="list-group-item" aria-current="true">

          </li>
        </ul>
        <a href="/postorders" class="btn btn-primary">Order Now</a>
        </div>
      </div>
      <table class="table table-hover">

      </table>

      <% } else { %>
          <h1>No Products in the Cart</h1>
        <% } %>

</main>

<%- include('../includes/end.ejs') %>
</body>

</html>
